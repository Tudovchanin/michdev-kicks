{
  "name": "michdev-kicks",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",

    "eslint": "eslint .",
    "eslint:fix": "eslint . --fix",
    "stylelint": "stylelint \"app/**/*.{css,scss,vue}\"",
    "stylelint:fix": "stylelint \"app/**/*.{css,scss,vue}\" --fix",

 
    "prisma:generate": "npx prisma generate",
    "prisma:push": "npx prisma db push",
    "prisma:studio": "npx prisma studio",

    "migrate:dev": "npm run prisma:push && npm run prisma:generate",
    "migrate:dev:studio": "npm run prisma:push && npm run prisma:generate && npm run prisma:studio",

    "migrate:prod": "npx prisma migrate deploy && npm run prisma:generate",
    "migrate:reset": "npx prisma migrate reset --force && npm run prisma:generate && npm run prisma:studio"

  },
  "dependencies": {
    "@nuxt/eslint": "^1.12.1",
    "@nuxt/image": "^2.0.0",
    "@pinia/nuxt": "^0.11.3",
    "@prisma/client": "^6.19.1",
    "eslint": "^9.39.2",
    "nuxt": "^4.2.2",
    "pinia": "^3.0.4",
    "vue": "^3.5.26",
    "vue-router": "^4.6.4"
  },
  "devDependencies": {
    "postcss-html": "^1.8.0",
    "prisma": "^6.19.1",
    "sass": "^1.97.1",
    "stylelint": "^16.26.1",
    "stylelint-config-standard-scss": "^16.0.0",
    "stylelint-order": "^7.0.1",
    "typescript": "^5.9.3",
    "vue-tsc": "^3.2.1"
  }
}
